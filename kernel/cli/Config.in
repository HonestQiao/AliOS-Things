menuconfig AOS_COMP_CLI
    bool "cli"
    select AOS_COMP_DEBUG
    select AOS_COMP_ULOG
    default n
    help
      command-line interface

if AOS_COMP_CLI
# Configurations for component cli

config CLI_CONFIG_MINIMUM_MODE
    int "CLI_CONFIG_MINIMUM_MODE"
    default 0
    help
        disable/enable the cli minimum mode.
        default 0

config CLI_CONFIG_INBUF_SIZE
    int "CLI_CONFIG_INBUF_SIZE"
    default 256
    help
        set the CLI input buffer size.
        default 256

config CLI_CONFIG_OUTBUF_SIZE
    int "CLI_CONFIG_OUTBUF_SIZE"
    default 512
    help
        set the CLI output buffer size.
        default 512

config CLI_CONFIG_MAX_COMMANDS
    int "CLI_CONFIG_MAX_COMMANDS"
    default 64
    help
        set the limitation of max supported commands.
        default 64

config CLI_CONFIG_MAX_ARG_NUM
    int "CLI_CONFIG_MAX_ARG_NUM"
    default 16
    help
        set the limitation of max arguments count in one command.
        default 16

config CLI_CONFIG_MAX_ONCECMD_NUM
    int "CLI_CONFIG_MAX_ONCECMD_NUM"
    default 4
    help
        set the limitation of max commands count in one input line.
        default 4

config CLI_CONFIG_TASK_PRIORITY
    int "CLI_CONFIG_TASK_PRIORITY"
    default 60
    help
        set the task priority of the CLI task.
        default 60

config CLI_CONFIG_TELNET_SUPPORT
    int "CLI_CONFIG_TELNET_SUPPORT"
    default 0
    help
        disable/enable the CLI telnet output support.
        default 0

endif
