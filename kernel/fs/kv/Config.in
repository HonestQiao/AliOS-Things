menuconfig AOS_COMP_KV
    bool "Key-value Style Storage"
    select AOS_COMP_MBEDTLS if KV_CONFIG_SECURE_CRYPT_IMPL = 1
    select MBEDTLS_CONFIG_CRYPTO if KV_CONFIG_SECURE_CRYPT_IMPL = 1
    select MBEDTLS_CONFIG_CRYPTO_AES if KV_CONFIG_SECURE_CRYPT_IMPL = 1
    select MBEDTLS_CONFIG_CRYPTO_MODE_OFB if KV_CONFIG_SECURE_CRYPT_IMPL = 1
    default n
    help
      lightweight key-value style storage module

if AOS_COMP_KV
# Configurations for component kv

config KV_CONFIG_TASK_PRIORITY
    int "KV_CONFIG_TASK_PRIORITY"
    default 32
    help
        set the task priority of the kv garbage collection task.
        default 32

config KV_CONFIG_TASK_STACK_SIZE
    int "KV_CONFIG_TASK_STACK_SIZE"
    default 1024
    help
        set the task stack size of the kv garbage collection task.
        default 1024

config KV_CONFIG_MAX_KEY_LEN
    int "KV_CONFIG_MAX_KEY_LEN"
    default 128
    help
        set the maximum of key buffer length.
        default 128

config KV_CONFIG_MAX_VAL_LEN
    int "KV_CONFIG_MAX_VAL_LEN"
    default 512
    help
        set the maximum of value buffer length.
        default 512

config KV_CONFIG_SECURE_SUPPORT
    int "KV_CONFIG_SECURE_SUPPORT"
    range 0 1
    default 0
    help
        disable/enable the kv secure storage feature.
        0 for disable; 1 for enable
        default 0

if KV_CONFIG_SECURE_SUPPORT = 1

config KV_CONFIG_SECURE_LEVEL
    int "KV_CONFIG_SECURE_LEVEL"
    range 1 2
    default 1
    help
        select the kv secure level.
        1 for function level (encrypt store only via kv secure API)
        2 for all-block level (encrypt store for all kv public APIs)
        default 1

config KV_CONFIG_SECURE_CRYPT_IMPL
    int "KV_CONFIG_SECURE_CRYPT_IMPL"
    range 1 3
    default 1
    help
        the crypt interface implementaton.
        1 for mbedtls SW implementation; 2 for user defined crypt implementation.
        default 1

endif

endif
