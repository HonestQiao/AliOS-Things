config AOS_APP_MESHAPP
    bool "meshapp"
    select AOS_COMP_UMESH
    select AOS_COMP_NETMGR
    select AOS_COMP_CLI
    select AOS_COMP_ALICRYPTO if MESHAUTH = 1
    select AOS_COMP_ID2 if MESHAUTH = 1
    select AOS_COMP_LWIP if LWIP != 0
    select AOS_COMP_DDA if AOS_BOARD_LINUXHOST || AOS_BOARD_ARMHFLINUX
    help
        uMesh sample application

if AOS_APP_MESHAPP
# Configurations for app meshapp

config MESHAUTH
    int "mesh auth"
    range 0 1
    default 0
    help

config IPV6
    int "use ipv6"
    range 0 1
    default 0
    help

config MESHAPP_CONFIG_HAL_TEST
    int "mesh hal test"
    range 0 1
    default 0
    help

config LWIP
    int "LWIP"
    range 0 1
    default 1 

endif
