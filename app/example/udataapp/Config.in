menuconfig AOS_APP_UDATAAPP
    bool "udataapp"
    select AOS_COMP_CLI
    select AOS_COMP_SENSOR
    select AOS_COMP_UDATA
    select AOS_COMP_NETMGR if AOS_CONFIG_DTC_MQTT
    select AOS_COMP_MQTT if AOS_CONFIG_DTC_MQTT

    select AOS_COMP_NETMGR if AOS_CONFIG_DTC_LINKKIT
    select AOS_COMP_MQTT if AOS_CONFIG_DTC_LINKKIT
    select AOS_COMP_CJSON if AOS_CONFIG_DTC_LINKKIT
    select AOS_COMP_LINKKIT if AOS_CONFIG_DTC_LINKKIT
    #select AOS_COMP_OTA if AOS_CONFIG_DTC_LINKKIT
    select AOS_COMP_LWIP if AOS_CONFIG_DTC_LINKKIT    
    help
        uData sensor framework demo

if AOS_APP_UDATAAPP
# Configurations for comp udata

choice
    prompt "choice list"
    depends on AOS_CONFIG_DTC_ENABLE
    default AOS_CONFIG_DTC_MQTT
    help
        This is 'choice' list sample
    config AOS_CONFIG_DTC_LINKKIT
        bool "linkkit"
        default n
        help
            Enable linkkit
    config AOS_CONFIG_DTC_MQTT
        bool "mqtt"
        default n
        help
            Enable mqtt
endchoice

config AOS_CONFIG_LWIP_ENABLE
    bool "lwip"
	depends on AOS_CONFIG_DTC_LINKKIT
	default n
	help
	    Enable lwip

endif
