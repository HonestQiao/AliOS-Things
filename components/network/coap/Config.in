     bool "Build AOS"
     default y
     help
        Build AOS

endif

if !COAP_WITH_ALI_AUTH
config NDEBUG
     bool "No Debug Output"
     default y
     help
        No Debug

config COAP_WITH_NOAUTH
     bool "Coap without Auth"
     default y
     help
        Coap without Auth

