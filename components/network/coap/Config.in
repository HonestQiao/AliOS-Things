    help
        COAP WITH DTLS

config COAP_WITH_ALI_AUTH
    bool "COAP WITH ALI AUTH"
    default y
    help
        COAP WITH ALI AUTHENTICATION

config WITH_LIBCOAP_DEBUG
     bool "LIBCOAP DEBUG OUTPUT"
     default y
     help
        LIBCOAP DEBUG OUTPUT

if COAP_WITH_ALI_AUTH
