if AOS_CREATE_PROJECT
config AOS_COMP_LIBCOAP
    bool
    select INFRA_CJSON
    select INFRA_JSON_PARSER
    select INFRA_REPORT
    select INFRA_MD5
    select INFRA_SHA256
    select HAL_CRYPTO
    select INFRA_AES if !USE_MBEDTLS
    default y
endif

# Backward compatibility
if !AOS_CREATE_PROJECT
config AOS_COMP_LIBCOAP
    bool "Coap"
    select INFRA_CJSON
    select INFRA_JSON_PARSER
    select INFRA_REPORT
    select INFRA_MD5
    select INFRA_SHA256
    select HAL_CRYPTO
    select INFRA_AES if !USE_MBEDTLS
    default n
    help
        AliOS Things coap client
endif

