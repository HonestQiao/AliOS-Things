menuconfig AOS_COMP_BT_MESH
	bool "Bluetooth Mesh Stack"
	default n
	#select AOS_COMP_BT_COMMON
	#select AOS_COMP_BT_PORT
	help
	  AliOS Things NETWORK - Bluetooth Mesh component

if AOS_COMP_BT_MESH
# Configurations for comp bt_mesh

# Virtual option enabled whenever Generic Provisioning layer is needed
config CONFIG_BT_MESH_PROV
	bool "Generic Provisioning layer (PROV)"
	default y
	help
	  Virtual option enabled whenever Generic Provisioning layer is needed

config CONFIG_BT_MESH_PB_ADV
	bool "Provisioning support using the advertising bearer (PB_ADV)"
	select CONFIG_BT_MESH_PROV
	default y
	help
	  Enable this option to allow the device to be provisioned over
	  the advertising bearer.

# Virtual option enabled whenever any Proxy protocol is needed
config CONFIG_BT_MESH_PROXY
	bool "Proxy protocol (PROXY protocol)"
	default n
	help
	  Virtual option enabled whenever any Proxy protocol is needed

config CONFIG_BT_MESH_PB_GATT
	bool "Provisioning support using GATT (PB_GATT)"
	select CONFIG_BT_MESH_PROXY
	select CONFIG_BT_MESH_PROV
	default n
	help
	  Enable this option to allow the device to be provisioned over
	  GATT.

config CONFIG_BT_MESH_GATT_PROXY
	bool "GATT Proxy Service (GATT_PROXY)"
	select CONFIG_BT_MESH_PROXY
	default n
	help
	  This option enables support for the Mesh GATT Proxy Service,
	  i.e. the ability to act as a proxy between a Mesh GATT Client
	  and a Mesh network.

config CONFIG_BT_MESH_RELAY
	bool "Relay support (RELAY)"
	default y
	help
	  Support for acting as a Mesh Relay Node.

config CONFIG_BT_MESH_LOW_POWER
	bool "Support for Low Power features (LOW_POWER)"
	default n
	help
	  Enable this option to be able to act as a Low Power Node.

config CONFIG_BT_MESH_FRIEND
	bool "Support for acting as a Friend Node (FRIEND)"
	default n
	help
	  Enable this option to be able to act as a Friend Node.

config CONFIG_BT_MESH_CFG_CLI
	bool "Support for Configuration Client Model (CFG_CLI)"
	default n
	help
	  Enable support for the configuration client model.

config CONFIG_BT_MESH_HEALTH_CLI
	bool "Support for Health Client Model (HEALTH_CLI)"
	default n
	help
	  Enable support for the health client model.

config CONFIG_BT_MESH_SHELL
	bool "Enable Bluetooth Mesh shell (SHELL)"
	select CONFIG_BT_MESH_CFG_CLI
	select CONFIG_BT_MESH_HEALTH_CLI
	default n
	help
	  Activate shell module that provides Bluetooth Mesh commands to
	  the console.

endif
