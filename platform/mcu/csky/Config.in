config AOS_MCU_CSKY
    bool "mcu_csky"
    select AOS_COMP_CLI
    select AOS_COMP_LWIP if LWIP = 1
    select AOS_COMP_SAL if AOS_NETWORK_SAL
    select AOS_COMP_NETMGR if AOS_NETWORK_SAL || LWIP = 1
    select AOS_COMP_RHINO
    select AOS_COMP_DEVICE_SAL_ESP8266 if AOS_NETWORK_SAL
    select AOS_ARCH_CSKYV2_L
    help
      driver & sdk for platform/mcu csky

if AOS_MCU_CSKY
# Configurations for mcu csky

config LWIP
    int
    range 0 1
    default 0

config AOS_NETWORK_SAL
    bool
    default y

endif
